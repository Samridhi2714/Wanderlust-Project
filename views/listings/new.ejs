<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
  <div class="col-8 offset-2">
    <br /><br />
    <h2>Create a New Listing</h2>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-lable">Description</lable>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description!</div>
      </div>
      <div class="mb-3">
        <lable for="image" class="form-lable">Upload Listing Image</lable>
        <input name="listing[image]" type="file" class="form-control" required />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-lable">Price</lable>
          <input
            name="listing[price]"
            placeholder="1200"
            required
            class="form-control"
          />
          <div class="invalid-feedback">Price should be valid!</div>
        </div>
        <div class="mb-3 col-md-8">
          <lable for="country" class="form-lable">Country</lable>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid!</div>
        </div>
      </div>
      <div class="mb-3">
        <lable for="location" class="form-lable">Location</lable>
        <input
          name="listing[location]"
          placeholder="Jaipur,Rajasthan"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid!</div>
      </div>
      <div class="mb-3">
        <div class="mb-3">
  <label class="form-lable">Category</label>
  <select name="listing[category]" class="form-select" required>
    <option value="">Select Category</option>
    <option value="trending">Trending</option>
    <option value="rooms">Rooms</option>
    <option value="iconicCities">Iconic Cities</option>
    <option value="mountains">Mountains</option>
    <option value="castles">Castles</option>
    <option value="amazingPools">Amazing Pools</option>
    <option value="camping">Camping</option>
    <option value="farms">Farms</option>
    <option value="arctic">Arctic</option>
    <option value="domes">Domes</option>
    <option value="boats">Boats</option>
    <option value="beaches">Beaches</option>
  </select>
</div>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn mt-3">ADD</button>
      <br /><br />
    </form>
  </div>
</div>
